{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "fix": "yarn lint --fix",
    "lint": "tslint 'packages/**/*.ts{,x}'",
    "test": "jest",
    "local": "npx lerna run 'deploy'",
    "build": "npx lerna run 'build'",
    "release": "lerna publish",
    "semantic-release": "semantic-release",
    "link-all": "yarn unlink-all && lerna exec --parallel yarn link",
    "unlink-all": "lerna exec --parallel --bail=false yarn unlink"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitsy-ui/bitsy-framework.git"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn fix && yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "regenerator-runtime": "^0.13.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/config-conventional": "^9.1.2",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/node": "^14.6.2",
    "nps-utils": "^1.7.0",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "husky": "^4.2.5",
    "babel-core": "7.0.0-bridge.0",
    "commitizen": "^4.2.1",
    "lerna": "^3.22.1",
    "semantic-release": "^17.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0"
  }
}
