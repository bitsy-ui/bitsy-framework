{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "noEmit": true,
    "paths": {
      "@bitsy-ui/config/lib/*": ["../bitsy-ui-config/src/*"],
      "@bitsy-ui/common/lib/*": ["../bitsy-ui-common/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"],
  "references": [
    { "@bitsy-ui/config": "../bitsy-ui-config" },
    { "@bitsy-ui/common": "../bitsy-ui-common" }
  ]
}
